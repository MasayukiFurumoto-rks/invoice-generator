DROP TABLE IF EXISTS trade_statuses;

CREATE TABLE trade_statuses (
trade_statuses_id serial NOT NULL,
trade_statuses_key BIGINT UNSIGNED NOT NULL,
trade_statuses_value varchar(15) NOT NULL
);

